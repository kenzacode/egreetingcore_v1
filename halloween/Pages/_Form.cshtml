@page
@model IndexModel


<div id="ecard">


    <form method="post" onsubmit="myFunction()">

        <div class="form-group">
            <label for="receivername">@Html.DisplayNameFor(model => model.bridgeGreetings.receiverName)</label>
            @Html.TextBoxFor(model => model.bridgeGreetings.receiverName, new { type = "type", @class = "form-control", placeholder = "First and Last Name", maxlength = "100" })
            @Html.ValidationMessageFor(model =>model.bridgeGreetings.receiverName)
            <div class="countdown"></div>
        </div>

        <div class="form-group">
            <label for="receiveremail">Send To Email:</label>
            <input type="text" name="sendtoemail" placeholder="Send to.." maxlength="30">
            <div class="countdown"></div>
        </div>

        <div class="form-group">
            <label for="subject">Subject</label>
            <input type="text" name="subject" placeholder="Subject" maxlength="30">
            <div class="countdown"></div>
        </div>

        <div class="form-group">
            <label for="message">Message</label>
            <textarea name="message" placeholder="Write something.." style="height:100px" maxlength="30"></textarea>
            <div class="countdown"></div>
        </div>

        <div class="form-group">
            <label for="sendername">From Name</label>
            <input type="text" name="from" placeholder="From.." maxlength="30">
            <div class="countdown"></div>
        </div>

        <div class="form-group">
            <label for="senderemail">From Email</label>
            <input type="text" name="from" placeholder="From.." maxlength="30">
            <div class="countdown"></div>
        </div>




        <input id="submitbutton" type="submit" value="Preview" class="btn">
    </form>
</div>


<script>
    function myFunction() {
        var first = document.getElementById("first").value;
        alert(`${first} will be spooked.`)
    }
</script>