@page
@model IndexModel


<div id="ecard">


    <form method="post" onsubmit="myFunction()">



        <div class="form-group">
            <label for="to">To</label>
            <input type="text" name="sendto" placeholder="To.." maxlength="30">
            <div class="countdown"></div>
        </div>

        <div class="form-group">
            <label for="sendto">Send To Email:</label>
            <input type="text" name="sendtoemail" placeholder="Send to.." maxlength="30">
            <div class="countdown"></div>
        </div>

        <div class="form-group">
            <label for="from">From</label>
            <input type="text" name="from" placeholder="From.." maxlength="30">
            <div class="countdown"></div>
        </div>

        <div class="form-group">
            <label for="subject">Subject</label>
            <input type="text" name="subject" placeholder="Subject" maxlength="30"></input>
            <div class="countdown"></div>
        </div>

        <div class="form-group">
            <label for="message">Message</label>
            <textarea name="message" placeholder="Write something.." style="height:100px" maxlength="30"></textarea>
            <div class="countdown"></div>
        </div>

        <input id="submitbutton" type="submit" value="Preview" class="btn">
    </form>
</div>


